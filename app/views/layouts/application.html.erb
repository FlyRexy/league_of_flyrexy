<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>FlyRexy</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script>
      function set_id() {
          var teams = document.querySelectorAll('.end')
          for (var i = 0; i < teams.length; i++)
              teams[i].id = 'team-' + i;
      }
      function openTour(evt, cityName) {
          var i, tabcontent, tablinks;

          tabcontent = document.getElementsByClassName("tabcontent");
          for (i = 0; i < tabcontent.length; i++) {
              tabcontent[i].style.display = "none";
          }

          tablinks = document.getElementsByClassName("tablinks");
          for (i = 0; i < tablinks.length; i++) {
              tablinks[i].className = tablinks[i].className.replace(" active", "");
          }

          document.getElementById(cityName).style.display = "block";
          evt.currentTarget.className += " active";
      }
      function openStage(evt, cityName) {
          var i, tabcontent, tablinks;

          tabcontent = document.getElementsByClassName("stagecontent");
          for (i = 0; i < tabcontent.length; i++) {
              tabcontent[i].style.display = "none";
          }

          tablinks = document.getElementsByClassName("stagelinks");
          for (i = 0; i < tablinks.length; i++) {
              tablinks[i].className = tablinks[i].className.replace(" active", "");
          }

          document.getElementById(cityName).style.display = "block";
          evt.currentTarget.className += " active";
      }
  </script>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body style="background: white">
<div class="content">
  <%= render 'layouts/header' %>
  <div>
    <% flash.each do |_type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
    <% end %>
  </div>
  <%= turbo_frame_tag :modal %>
    <%= yield %>
  <div style = "padding-top: 15px" id="flash">
  </div>
</div>
<%= render 'layouts/footer' %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>