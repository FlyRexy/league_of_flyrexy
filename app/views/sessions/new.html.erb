<h1 style="padding: 30px"><%= t '.label' %></h1>

<div class="col-3" style="padding-left: 30px; padding-bottom: 100px">
  <%= form_with url: session_path do |form| %>
    <%= form.label t('.login') %>
    <br>
    <%= form.text_field :login, class: "form-control form-control-dark text-bg-dark"%>
    <br>
    <%= form.label t('.password') %>
    <br>
    <%= form.password_field :password, class: "form-control form-control-dark text-bg-dark"%>
    <br>
    <%= link_to t('.forgot'), new_password_reset_path, style: 'padding-bottom: 10px', id: 'forgot_pass_link' %>
    <br>
    <%= form.submit t('.sign_in'), class: "btn btn-outline-dark me-2", id: "my_button"%>
  <% end %>

</div>