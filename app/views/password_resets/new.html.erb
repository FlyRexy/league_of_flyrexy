<h1 style="padding: 10px; padding-left: 100px"><%= t '.reset_password' %></h1>

<div class="row">
  <div class="col-1"></div>
  <div class="col-3" style="padding-bottom: 300px">
    <%= form_with url: password_reset_path do |form| %>
      <%= form.label t('users.new.input_email') %>
      <br>
      <%= form.email_field :email, class: "form-control form-control-dark text-bg-dark", required: true %>
      <br>
      <%= form.submit t('.reset'), class: "btn btn-outline-dark me-2", id: 'reset_button' %>
    <% end %>
  </div>
</div>


